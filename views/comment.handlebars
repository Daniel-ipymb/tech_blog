<div>
  <input type="hidden" id="post-id" value="{{posts.id}}">
  <div>
    <h4>{{posts.title}}</h4>
    <p>Posted by {{posts.user.username}} on {{posts.date_created}}</p>
  </div>
  <div>
    <p>{{posts.post_content}}</p>
  </div>
</div>

{{#each posts.comments as |comment|}}
<div>
  {{!-- <div>

  </div> --}}
  <div>
    <p>{{comment.comment_text}}</p>
    <p>{{comment.user.username}} on {{comment.date}}</p>
  </div>
</div>
{{/each}}

<div>
  <div>
    <form>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label"></label>
        <textarea class="form-control comment" id="exampleFormControlTextarea1"
          rows="3"></textarea>
      </div>

      <div class="d-grid gap-2 d-md-block mx-auto">
        <button id="submit-btn" class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/comment.js"></script>



