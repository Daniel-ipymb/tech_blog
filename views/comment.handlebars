<div class="card">
  <div class="card-body">
    <div class="card-header">
      <input type="hidden" id="post-id" value="{{posts.id}}">
      <div>
        <h4>{{posts.title}}</h4>
        <p>Posted by {{posts.user.username}} on {{posts.date_created}}</p>
      </div>
      <div>
        <p>{{posts.post_content}}</p>
      </div>
    </div>
  </div>
</div>

{{#each posts.comments as |comment|}}
<div class="card">
  <div class="card-header">
    <div class="card-body">
      <p>{{comment.comment_text}}</p>
      <p>-Creaated by {{comment.user.username}} on {{comment.date}}</p>
    </div>
  </div>
</div>
{{/each}}

<div class="card">
  <div class="card-header">

    <div class="card-body">
      <form>
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label">Comment</label>
          <textarea class="form-control comment" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>

        <div class="d-grid gap-2 d-md-block mx-auto">
          <button id="submit-btn" class="btn btn-primary" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/js/comment.js"></script>