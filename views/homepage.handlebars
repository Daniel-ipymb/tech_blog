{{#each posts as |post|}}
<div class="card border-primary">
  <div class="card-header">
    <div class="card-body">
      <a href="/post/{{post.id}}">
        <div>
          <h4>{{post.title}}</h4>
          <p>Posted by {{post.user.username}} on {{post.date_created}}</p>
        </div>
      </a>
      <div>
        <p>{{post.post_content}}</p>
      </div>
    </div>
  </div>
  {{/each}}