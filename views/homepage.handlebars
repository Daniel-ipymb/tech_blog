{{#each posts as |post|}}
<div class="card border-primary d-grid gap-4">
  <div class="card-header">
    <a href="/post/{{post.id}}">
      <div>
        <h4>{{post.title}}</h4>
        <p>Posted by {{post.user.username}} on {{post.date_created}}</p>
      </div>
    </a>
    <div class="card-body">
      <div>
        <p>{{post.post_content}}</p>
      </div>
    </div>
  </div>
</div>
{{/each}}